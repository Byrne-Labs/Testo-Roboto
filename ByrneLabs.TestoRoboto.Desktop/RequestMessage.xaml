<UserControl x:Class="ByrneLabs.TestoRoboto.Desktop.RequestMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ByrneLabs.TestoRoboto.Desktop"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewModels="clr-namespace:ByrneLabs.TestoRoboto.Desktop.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:RequestMessageViewModel, IsDesignTimeCreatable=true }">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <xctk:WatermarkTextBox Margin="5" MinWidth="200" Watermark="Name" KeepWatermarkOnGotFocus="False" Text="{Binding Name}" />


        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Parameters">
                <DataGrid ItemsSource="{Binding QueryParameters}"></DataGrid>
            </TabItem>
            <TabItem Header="Authentication" />
            <TabItem Header="Headers" />
            <TabItem Header="Cookies" />
            <TabItem Header="Body" />
        </TabControl>

    </Grid>
</UserControl>
